<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_height="match_parent"
     android:layout_width="match_parent">

        <LinearLayout
            style="@style/appThemeLightActivity.AppStyleDialog" >

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Restaurar Contraseña"
                android:textAlignment="center"
                android:textColor="@color/blackColor"
                android:textSize="18sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text='Recibirá un correo de parte de noreply@upmhrth después de introducir su correo electrónico y haber dado clic en "Listo!"'
                android:textAlignment="center"
                android:textColor="@color/blackColor"
                android:textSize="14sp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/txtEmail"
                style="@style/styleForm"

                android:hint="Escriba su Correo Electrónico"
                android:inputType="textPersonName"
                android:textColor="@color/blackColor" />

            <androidx.cardview.widget.CardView
                android:id="@+id/btnRecoverCv"
                style="@style/btnMainCv">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Listo!"
                        android:textColor="@color/whiteColor"
                        android:textSize="15sp"
                        android:textStyle="normal|bold|italic"
                        android:typeface="normal" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btnCancelCv"
                style="@style/btnSecundaryCv">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Cancelar"
                        android:textColor="@color/whiteColor" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

</ScrollView>